// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model for the single Administrator
model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
}

// Model for all items, both Lost and Found
model Item {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  category        String
  location        String
  status          String   // "Lost", "Found", "Pending", "Returned"
  date            DateTime @default(now())
  reporterName    String
  reporterContact String
  returnDate      DateTime?
  claims          Claim[]
}

// Model for claims made on Found items
model Claim {
  id                Int      @id @default(autoincrement())
  itemId            Int
  claimerName       String   // Name of the person claiming the item
  claimerContact    String   // Contact info of the claimer
  proofOfOwnership  String
  status             String   // "Pending", "Approved", "Rejected"
  date             DateTime @default(now())

  item   Item @relation(fields: [itemId], references: [id])
}