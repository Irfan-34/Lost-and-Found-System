// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model for the single Administrator
model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

// Model for all items, both Lost and Found
model Item {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  category        String
  location        String
  imageUrl        String?
  status          String
  reporterName    String   // Name of the person who reported the item
  reporterContact String   // Contact info of the reporter
  createdAt       DateTime @default(now())

  // For Return History
  senderName      String? // This will be the finder's name
  recipientName   String? // This will be the loser's name

  // Relation to claims
  claims Claim[]
}

// Model for claims made on Found items
model Claim {
  id                Int      @id @default(autoincrement())
  proofOfOwnership  String
  claimerName       String   // Name of the person claiming the item
  claimerContact    String   // Contact info of the claimer
  createdAt         DateTime @default(now())

  item   Item @relation(fields: [itemId], references: [id])
  itemId Int
}